<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splash">
    <fragment
        android:id="@+id/splash"
        android:name="com.softteco.template.presentation.features.splash.SplashFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/actionToLoginComposeFragment"
            app:destination="@id/loginComposeFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainNavHostFragment"
        android:name="com.softteco.template.presentation.features.MainNavHostFragment"
        android:label="MainNavHostFragment"
        tools:layout="@layout/fragment_main_nav_host" />
    <fragment
        android:id="@+id/loginComposeFragment"
        android:name="com.softteco.template.presentation.login.LoginComposeFragment"
        android:label="LoginComposeFragment" >
        <action
            android:id="@+id/action_loginComposeFragment_to_registrationComposeFragment"
            app:destination="@id/registrationComposeFragment" />
        <action
            android:id="@+id/action_loginComposeFragment_to_forgotPasswordComposeFragment"
            app:destination="@id/forgotPasswordComposeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationComposeFragment"
        android:name="com.softteco.template.presentation.login.RegistrationComposeFragment"
        android:label="RegistrationComposeFragment" />
    <fragment
        android:id="@+id/forgotPasswordComposeFragment"
        android:name="com.softteco.template.presentation.login.ForgotPasswordComposeFragment"
        android:label="fragment_forgot_password_compose"
        tools:layout="@layout/fragment_forgot_password_compose" />

</navigation>
