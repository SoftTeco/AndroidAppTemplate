<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splash">
    <fragment
        android:id="@+id/splash"
        android:name="com.softteco.template.presentation.features.splash.SplashFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/splash_to_mainNavHostFragment"
            app:destination="@id/mainNavHostFragment"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mainNavHostFragment"
        android:name="com.softteco.template.presentation.features.MainNavHostFragment"
        android:label="MainNavHostFragment"
        tools:layout="@layout/fragment_main_nav_host" />

</navigation>
